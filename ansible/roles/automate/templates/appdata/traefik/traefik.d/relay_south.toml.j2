[http.routers]

  [http.routers.relay-south-glances-http]
    entryPoints = ["http"]
    rule = "Host(`glances-relay-south.{{ domain_name }}`)"
    middlewares = ["common", "redirect-https"]
  [http.routers.relay-south-glances-https]
    entryPoints = ["https"]
    rule = "Host(`glances-relay-south.{{ domain_name }}`)"
    middlewares = ["common", "monitoring-auth"]
    service = "relay-south-glances"
    [http.routers.relay-south-glances-https.tls]

  [http.routers.relay-south-traefik-http]
    entryPoints = ["http"]
    rule = "Host(`traefik-relay-south.{{ domain_name }}`)"
    middlewares = ["common", "redirect-https"]
  [http.routers.relay-south-traefik-https]
    entryPoints = ["https"]
    rule = "Host(`traefik-relay-south.{{ domain_name }}`)"
    middlewares = ["common", "monitoring-auth"]
    service = "relay-south-traefik"
    [http.routers.relay-south-traefik-https.tls]

[http.services]

  [http.services.relay-south-glances.LoadBalancer]
     [[http.services.relay-south-glances.LoadBalancer.servers]]
        url = "http://glances.{{ relay_south_host }}/"

  [http.services.relay-south-traefik.LoadBalancer]
     [[http.services.relay-south-traefik.LoadBalancer.servers]]
        url = "http://traefik.{{ relay_south_host }}/"
